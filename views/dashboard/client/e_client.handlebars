<div class="page">
<div class="container">
        <div class="mt-2">
          <h1>Veículo
          </h2>
          <hr>
        </div>

    <div class="card">
              <div id="card" class="card-header">
                  <svg class="m-1" width="20" height="20"><use xlink:href="#road"/></svg>
                  Editar Cliente
              </div>
    
              <div id="card-body" class="card-body">

                <form  action="">
                    
                    
                   <div class="container d-flex m-2">
                        <label for="nome">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#client"/></svg>
                        </label>
    
                        <input type="text" id="nome" class="form-control" placeholder="Nome">
                    </div>

                    <div class="container d-flex m-2">
                        <label for="cpf">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#cpf-icon"/></svg>
                        </label>
    
                        <input type="text" id="cpf" class="form-control" placeholder="CPF">
                    </div>


                    <div class="container d-flex m-2">
                        <label for="telefone">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#user"/></svg>
                        </label>
    
                        <input type="text" id="telefone" class="form-control" placeholder="Telefone">
                    </div>

                    <div class="container d-flex m-2">
                        <label for="endereco">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#clients"/></svg>
                        </label>
    
                        <input type="text" id="map" class="form-control" placeholder="Endereço">
                    </div>

                    
                </form>
                
              </div>
            
    </div>

    <div class="d-flex mx-1">
        <button type="button" class="btn btn-outline-info btn-block mt-3 mx-1" > Cancelar</button>
        <button type="button" class="btn btn-info btn-block mt-3 mx-1" > Salvar Alterações</button>
    </div>

</div>

    
</div>
