<div class="page">
<div class="container">
        <div class="mt-2">
          <h1>Clientes</h1>
          <hr>
        </div>

    <div class="card">
              <div id="card" class="card-header">
                  <svg class="m-1" width="20" height="20"><use xlink:href="#client"/></svg>
                  Cadastrar Cliente
              </div>
    
              <div id="card-body" class="card-body">

                <form  action="/clients/edit/" method="post">
                    
                    
                   <div class="container d-flex m-2">
                    <input type="hidden" name="id" value="{{user.id}}">
                        <label for="nome">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#client"/></svg>
                        </label>
    
                        <input type="text" id="nome" class="form-control" placeholder="Nome" name="nome" value="{{user.nome}}">
                    </div>

                    <div class="container d-flex m-2">
                        <label for="cpf">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#cpf-icon"/></svg>
                        </label>
    
                        <input type="text" id="cpf" class="form-control" placeholder="CPF" name="cpf" value="{{user.cpf}}">
                    </div>


                    <div class="container d-flex m-2">
                        <label for="telefone">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#phone"/></svg>
                        </label>
    
                        <input type="text" id="telefone" class="form-control" placeholder="Telefone" name="telefone" value="{{user.telefone}}">
                    </div>

                    <div class="container d-flex m-2">
                        <label for="endereco">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#map"/></svg>
                        </label>
    
                        <input type="text" id="map" class="form-control" placeholder="EndereÃ§o" name="endereco" value="{{user.endereco}}">
                    </div>  

                    <div class="d-flex mx-1">
                        {{!-- <button type="button" class="btn btn-outline-info btn-block mt-3 mx-1" > Cancelar</button> --}}
                        <a href="/clients" class="btn btn-outline-info btn-block mt-3 mx-1">Cancelar</a>
                        {{!-- <button type="submit" class="btn btn-info btn-block mt-3 mx-1" > Cadastrar novo cliente</button> --}}
                        <input type="submit" value="Atualizar" class="btn btn-info btn-block mt-3 mx-1">
                    </div>

                </form>
                
              </div>
            
    </div>

    

</div>

    
</div>
