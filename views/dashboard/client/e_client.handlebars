          <label for="cpf" class="form-label">CPF:</label>
          <input type="number" name="cpf" value="{{user.cpf}}" class="form-control" />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label for="telefone" class="form-label">Telefone:</label>
          <input type="number" name="telefone" value="{{user.telefone}}" class="form-control" />
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label for="endereco" class="form-label">Endere√ßo:</label>
          <input type="text" name="endereco" value="{{user.endereco}}" class="form-control" />
        </div>
      </div>
      <div class="col botoes">
        <a href="/clients" class="btn">
          Voltar
        </a>
        <input type="submit" value="Atualizar" class="btn">
