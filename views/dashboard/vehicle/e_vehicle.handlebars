{{> navbar}}
{{> icons}}

<div class="page">
<div class="container">
        <div class="mt-5 mb-4">
          <h1>Veículo
          </h2>
          <hr>
        </div>

    <div class="card">
              <div id="card" class="card-header">
                  <svg class="m-1" width="20" height="20"><use xlink:href="#car"/></svg>
                  Editar Veículo
              </div>
    
              <div id="card-body" class="card-body">

                <form action="/vehicles/edit/{{veiculos.id}}" method="post">
                    
                    
                    <div class="container d-flex align-content-center m-2">
                        <label for="cars">
                            <svg class="be m-1" width="20" height="20"><use xlink:href="#car-side"/></svg>
                        </label>
                        
                        <select name="modelo" id="cars" name="cars" class="form-control">
                            <option value="{{veiculos.modelo}}" >{{veiculos.modelo}}</option>
                            <option  value="volvo">Volvo</option>
                            <option  value="saab">Saab</option>
                            <option value="fiat">Fiat</option>
                            <option value="audi">Audi</option>
                        </select>
                    </div>

                    <div class="container d-flex m-2">
                        <label for="placa">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#car-plate"/></svg>
                        </label>
    
                        <input name="placa" value="{{veiculos.placa}}" type="text" id="placa" class="form-control" placeholder="Placa">
                    </div>


                    <div class="container d-flex m-2">
                        <label for="cor">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#color"/></svg>
                        </label>
    
                        <input name="cor" value="{{veiculos.cor}}" type="text" id="cor" class="form-control" placeholder="Cor">
                    </div>

                    <div class="container d-flex m-2">
                        <label for="money">
                            <svg class="m-1" width="20" height="20"><use xlink:href="#money"/></svg>
                        </label>
    
                        <input name="custo" value="{{veiculos.custo}}" type="text" id="money" class="form-control" placeholder="Custo diário">
                    </div>

                    <div class="d-flex mx-1">
                        <button type="submit" class="btn btn-outline-info btn-block mt-3 mx-1" > Cancelar</button>
                        <button type="submit" class="btn btn-info btn-block mt-3 mx-1" > Salvar Alterações</button>
                    </div>
                    
                </form>
                
              </div>
            
    </div>

</div>

    
</div>
