<div class="page">
<div class="container">
        <div class="mt-5 mb-4">
          <h1>Configurações</h2>
          <hr>
        </div>

    <div class="card">

              <div id="card" class="card-header">
                  <svg class="m-1" width="20" height="20"><use xlink:href="#user"/></svg>
                  Novo Usuário
              </div>
    
        <div id="card-body" class="card-body">

            <form  action="/users/add" method="post">
                
                <div class="container d-flex m-2">
                    <label for="nome">
                        <svg class="m-1" width="20" height="20"><use xlink:href="#signature"/></svg>
                    </label>
                    <input type="text" id="nome" class="form-control" placeholder="Nome" name="nome">
                </div>


                <div class="container d-flex m-2">
                    <label for="cpf">
                        <svg class="m-1" width="20" height="20"><use xlink:href="#cpf-icon"/></svg>
                    </label>
                    <input type="number" id="cpf" class="form-control" maxlength="11" placeholder="CPF" name="cpf">
                </div>

                 <div class="container d-flex m-2">
                    <label for="email">
                        <svg class="m-1" width="20" height="20"><use xlink:href="#signature"/></svg>
                    </label>
                    <input type="text" id="email" class="form-control" placeholder="Email" name="email">
                </div>
                
                <div class="container d-flex m-2">
                    <label for="senha">
                        <svg class="m-1" width="20" height="20"><use xlink:href="#lock"/></svg>
                    </label>
                    <input type="password" id="senha_1" class="form-control" placeholder="Senha" name="senha">
                </div>
                
