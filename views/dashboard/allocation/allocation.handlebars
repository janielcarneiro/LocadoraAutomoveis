{{> icons}}

<div class="page">
    <div class="container">
        <div class="mt-5 mb-4">
            <h1>Alocações</h2>
            <hr>
        </div>

        <div class="card">
            <div id="card" class="card-header">
                <svg class="m-1" width="20" height="20"><use xlink:href="#road"/></svg>
                Alocações
            </div>
            <div class="card-body">     
                <table class="table table-sm">
                    <thead>
                        <tr>
                        <th scope="col">Veículo</th>
                        <th scope="col">Placa</th>
                        <th scope="col">Cliente</th>
                        <th scope="col">Data de alocação</th>
                        <th scope="col">Editar/Excluir</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{> tabela_alocacoes}}
                    </tbody>
                        
                </table>
            </div>
        </div>
        <a href="/alocacoes/add" class="btn btn-info btn-block mt-5" > Cadastrar nova alocação</a>
    </div>
    
</div>